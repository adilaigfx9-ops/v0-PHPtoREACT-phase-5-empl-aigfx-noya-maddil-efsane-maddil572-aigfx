# Backend .htaccess for API endpoints
# Place this in /backend/ directory

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /backend/
  
  # Allow CORS preflight requests
  RewriteCond %{REQUEST_METHOD} OPTIONS
  RewriteRule ^(.*)$ $1 [R=200,L]
  
  # API Routes - rewrite to appropriate PHP files
  # Example: /backend/api/blogs -> /backend/api/blogs.php
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} ^/backend/api/
  RewriteRule ^api/(.*)$ api/$1.php [L,QSA]
  
  # Admin panel is accessed directly
  # /backend/admin/index.php
</IfModule>

# Security Headers
<IfModule mod_headers.c>
  # CORS Configuration
  Header always set Access-Control-Allow-Origin "https://adilcreator.com"
  Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
  Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
  Header always set Access-Control-Allow-Credentials "true"
  
  # Security Headers
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "DENY"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>

# PHP Settings
<IfModule mod_php7.c>
  php_value upload_max_filesize 10M
  php_value post_max_size 10M
  php_value memory_limit 256M
  php_value max_execution_time 30
</IfModule>

# Deny access to sensitive files
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

<FilesMatch "\.(env|log|sql|md)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Protect class and config directories
<DirectoryMatch "^/.*/classes/">
  Order allow,deny
  Deny from all
</DirectoryMatch>

<DirectoryMatch "^/.*/config/">
  Order allow,deny
  Deny from all
</DirectoryMatch>
